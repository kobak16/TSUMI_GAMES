<% else %>
    <!-- 未ログイン時 -->
    <div class="d-flex flex-column flex-md-row align-items-center p-3 
                  px-md-4 bg-dark shadow-sm header-position">
      <%= link_to 'TUMI GAMES', root_path, class: 'navbar-brand my-0 mr-md-auto font-weight-normal text-white'%>
      <nav class="my-2 my-md-0 mr-md-3">
