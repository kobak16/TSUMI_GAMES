      </nav>
    </div>

  </div>
<% else %>
  <div class="header d-flex">
    <%= link_to 'TSUMI GAMES', root_path, class: 'navbar-brand header-logo' %>
    <nav class="my-2 ml-auto mr-2">
      <%= link_to '新規登録', new_user_registration_path, class: 'header-list p-2' %>
      <%= link_to 'ログイン', new_user_session_path, class: 'header-list p-2' %>
      <%= link_to 'ゲストログイン', users_guest_sign_in_path, method: :post, class: 'header-list p-2' %>
    </nav>
  </div>
  <div class="header-menu bg-light shadow-sm">
      <nav class="nav justify-content-center">
        <%= link_to 'ゲーム検索', '/games', class: 'nav-link header-menu-item' %>
        <%= link_to 'ユーザー一覧', '/users', class: 'nav-link header-menu-item' %>
        <%= link_to '積みゲー追加', new_game_path, class: 'nav-link header-menu-item' %>    
      </nav>
    </div>
<% end %>