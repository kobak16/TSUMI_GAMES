  <div class="header_list">
    <div class="header-position">
      <div class="d-flex flex-column flex-md-row align-items-center p-3 
                    px-md-4 bg-dark shadow-sm">
        <%= link_to 'TUMI GAMES', gamer_path(current_user), class: 'navbar-brand my-0 mr-md-auto font-weight-normal text-white' %>
        <!--
        <a class="navbar-brand my-0 mr-md-auto font-weight-normal text-white" href="#">TUMI GAMES</a>
        -->
        <div class="nav-item dropdown">
          <a class="nav-link dropdown-toggle text-white" href="#" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">@user.username</a>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdown01">
            <%= link_to 'マイページ', gamer_path(current_user), class: 'dropdown-item' %>
