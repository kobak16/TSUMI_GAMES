<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h2>情報登録</h2>
      <h3>タイトル : <%= @game.title %></h3>  
      <h3>ハード : <%= @game.machine_i18n %></h3>
      <h3>ジャンル : <%= @game.genre_i18n %></h3>

      <%= form_with(model: @game, local: true) do |f|  %>
        <div class="form-group" id="star">
          <%= f.label :rate,  '評価' ,class: 'col-md-3 col-form-label' %>
          <%= f.hidden_field :rate, id: :review_star %>
        </div>

        <script>
        $('#star').raty({
          size     : 36,
          starOff:  '<%= asset_path('star-off.png') %>',
          starOn : '<%= asset_path('star-on.png') %>',
          starHalf: '<%= asset_path('star-half.png') %>',
          scoreName: 'game[rate]',
          half: true,
        });
        </script> 
        
        <div class="field">
          <%= f.label :comment %><br />
          <%= f.text_field :comment, autofocus: true %>
        </div>

        <%= f.hidden_field :status, :value => 1 %>

        <%= f.submit '登録', class: 'btn btn-secondary btn-lg', name: 'clear' %>
      <% end %>

      <%= link_to "Back", :back %>
    </div>
  </div>
</div>