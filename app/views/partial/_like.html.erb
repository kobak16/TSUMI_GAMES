<% if Like.find_by(user_id: current_user.id, game_id: @game.id) %>
  <%= link_to '気になる解除', game_like_path(@game, id: @game.likes[0].id), method: :delete, remote: true, class: 'btn-white' %>
<% else %>
  <%= link_to '気になる', game_likes_path(@game), method: :post, remote: true, class: 'btn-black' %>
<% end %>
