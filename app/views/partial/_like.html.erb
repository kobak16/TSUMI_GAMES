<% if Like.find_by(user_id: current_user.id, game_id: @game.id) %>
  <%= link_to 'お気に入り解除', game_like_path(@game, id: @game.likes[0].id), method: :delete, remote: true, class: 'btn btn-outline-secondary' %>
<% else %>
  <%= link_to 'お気に入り登録', game_likes_path(@game), method: :post, remote: true, class: 'btn btn-outline-secondary' %>
<% end %>
