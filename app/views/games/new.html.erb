<div class="container">
  <div class="row">
    <div class="col-md-4">
      <%= form_with(model: @game, local: true) do |f| %>
        <h1>積みゲー登録</h1>
        <h3>タイトル</h3>
        <%= f.text_field :title, class: 'form-control' %>
        <h3>ハード</h3>
        <%= f.select :machine, Game.machines.keys.map {|k| [I18n.t("enum.game.machine.#{k}"), k]}, {}, 
            class: 'form-control col-md-6' %>
        <h3>ジャンル</h3>
        <%= f.select :genre, Game.genres.keys.map {|k| [I18n.t("enum.game.genre.#{k}"), k]}, {}, 
            class: 'form-control col-md-6' %>
        <%= f.submit '積みゲーを追加', class: 'btn btn-secondary btn-lg' %>
      <% end %>
    </div>
  </div>
</div>