<h1>ゲーム詳細</h1>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <a class="text-dark" href="#"><%= @game.title %></a>
      <a class="text-dark" href="#"><%= @game.machine_i18n %></a>
      <a class="text-dark" href="#"><%= @game.genre_i18n %></a>
      <a class="text-dark" href="#"><%= @game.user.username %>

      <div id="star-rate-<%= @game.id %>"></div>
      <script>
      $('#star-rate-<%= @game.id %>').raty({
        size: 36,
        starOff:  '<%= asset_path('star-off.png') %>',
        starOn : '<%= asset_path('star-on.png') %>',
        starHalf: '<%= asset_path('star-half.png') %>',
        half: true,
        readOnly: true,
        score: <%= @game.rate %>,
      });
      </script>
      
      <%= link_to '編集する', edit_game_path(@game) %>
    </div>
  </div>
</div>