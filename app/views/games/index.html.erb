<h1>ゲーム一覧・検索</h1>
<div class="container">
  <% @games.each do |game| %>
    <div class="row">
      <div class="col-md-6 bg-white">
        <a class="text-dark" href="#"><%= game.title %></a>
        <a class="text-dark" href="#"><%= game.machine_i18n %></a>
        <a class="text-dark" href="#"><%= game.genre_i18n %></a>
        <a class="text-dark" href="#"><%= game.user.username %></a>
      </div>
    </div>
  <% end %>
</div>