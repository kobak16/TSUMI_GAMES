<div class="container">

  <div class="page-title mt-3">
    <% if @user.id == current_user.id %>
      <h2>マイゲーム</h2>
    <% else %>
      <h2><%= @user.username %>'s ゲーム</h2>
    <% end %>
  </div>

  <div class="row mygames-select justify-content-center my-3">
    <%= render '/partial/mygames_select' %>
  </div>

  <div class="row mygame-item">
    <%= render '/partial/game_items' %>
  </div>

  <div class="row pagination-position">
    <%= paginate @games %>
  </div>

</div>